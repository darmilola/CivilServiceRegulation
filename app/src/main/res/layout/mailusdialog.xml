<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:id="@+id/mailusemailtitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="18dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:id="@+id/mailusemailvalue"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textSize="17dp"
        android:paddingLeft="10dp"

        android:layout_marginRight="10dp"
        android:background="@drawable/edittextrectangle"/>

    <TextView
        android:id="@+id/mailussubjecttitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Subject"
        android:textColor="#000000"
        android:textSize="18dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:hint="Type your subject here..."
        android:inputType="text"
        android:id="@+id/mailussubjectvalue"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextrectangle"/>
    <TextView
        android:id="@+id/mailusmessagetitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Message"
        android:textColor="#000000"
        android:textSize="18dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textColor="#000000"
        android:maxLength="1500"
        android:id="@+id/mailusmessagevalue"
        android:layout_marginLeft="10dp"
        android:gravity="left|top"
        android:textSize="17dp"
        android:padding="10dp"
        android:hint="Type Your Message here..."
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextrectangle"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Send"
        android:textSize="20dp"
        android:id="@+id/mailussend"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center|top"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:layout_marginRight="20dp"
        android:textColor="@color/White"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>