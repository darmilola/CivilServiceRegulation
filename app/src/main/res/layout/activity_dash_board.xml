<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rules"
    android:gravity="center"
    android:id="@+id/dashboard_background"
    tools:context=".DashBoard">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5 days Free Trial"
        android:textColor="#10E2A7"
        android:textSize="25dp"
        android:id="@+id/fivedaystrial"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Upgrade"
        android:id="@+id/upgrade_button"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/transparent_background"
        android:layout_gravity="center|top"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/White"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="1"
       android:id="@+id/pagecount"
       android:textSize="50dp"
       android:layout_marginBottom="30dp"
       android:textColor="@color/White"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="/7"
       android:id="@+id/pagenumbers"
       android:textSize="50dp"
       android:layout_marginBottom="30dp"
       android:textColor="#99ffffff"/>
</LinearLayout>
   <androidx.viewpager.widget.ViewPager
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:paddingLeft="30dp"
       android:paddingRight="30dp"
       android:id="@+id/dashboard_pager"
       android:clipToPadding="false"
       />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/next"/>
</LinearLayout>
</LinearLayout>